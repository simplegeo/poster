#!/usr/bin/make -f

ARTIFACTS ?= .
DEB_PYTHON_SYSTEM=pysupport

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

check::
	python setup.py nosetests --cover-html-dir $(ARTIFACTS)/htmlcov \
                              --xunit-file $(ARTIFACTS)/xunit.xml

configure/python-poster:: check
